                        <Label FontSize="17"   Foreground="#8f939c"  Grid.Row="0" Content=" 8:00"   />

                    </Grid>
                    <Border CornerRadius="90" Margin="7" BorderThickness="0" Background="#74cd57" Grid.Column="0">

