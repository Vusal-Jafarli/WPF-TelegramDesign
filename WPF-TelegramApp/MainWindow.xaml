                <TextBox Padding="10 4"  BorderThickness="0" Foreground="#9c9c9c" FontSize="17" Text="Search" FontWeight="DemiBold"  HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="0" Background="#f1f1f1" Margin="73,15,65,15" Height="40" Grid.ColumnSpan="2"/>
            </Grid>
