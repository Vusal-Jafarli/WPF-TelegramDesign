                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Label HorizontalContentAlignment="Left" FontSize="18" Foreground="Black" FontWeight="Bold" Margin="4 4 0 -3" Grid.Column="1" Grid.Row="0" Content="Alexandra Smith" />
                        <Label HorizontalContentAlignment="Left" FontSize="16"  Foreground="#8f939c" Grid.Column="1" Grid.Row="1" Margin="0" Content="This is amazing!" />
